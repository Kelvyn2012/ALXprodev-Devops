#!/bin/bash

# Script: apiAutomation-0x00
# Description: Fetch data for Pikachu from the Pokémon API and save it to a file.
# If the request fails, log the error to errors.txt.

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Check if request was successful (HTTP status 200)
if [ "$response" -eq 200 ]; then
    echo "✅ Data successfully fetched and saved to $OUTPUT_FILE"
else
    echo "❌ Failed to fetch data. HTTP status: $response" >> "$ERROR_FILE"
    echo "Check $ERROR_FILE for more details."
fi
