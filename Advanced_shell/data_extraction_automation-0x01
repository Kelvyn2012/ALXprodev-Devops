#!/bin/bash

# Script: data_extraction_automation-0x01
# Description: Extracts Pikachu's name, height, weight, and type from data.json
# Only uses jq, awk, and sed

DATA_FILE="data.json"

# Check if data.json exists
if [ ! -f "$DATA_FILE" ]; then
    echo "Error: $DATA_FILE not found. Please run the previous script first."
    exit 1
fi

# Extract and format data
name=$(jq -r '.name' "$DATA_FILE" | sed 's/.*/\u&/')
height=$(jq -r '.height' "$DATA_FILE" | awk '{print $1/10}')
weight=$(jq -r '.weight' "$DATA_FILE" | awk '{print $1/10}')
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')

# Format height and weight for output
formatted_height=$(printf "%.1f" "$height")
formatted_weight=$(printf "%.0f" "$weight")

# Output in the required format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
