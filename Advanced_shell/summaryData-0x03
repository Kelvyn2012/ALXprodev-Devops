#!/bin/bash

# Script: summaryData-0x03
# Description: Reads PokÃ©mon JSON files and generates a CSV summary with averages.

DATA_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Check if the data directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "Error: $DATA_DIR not found. Please run batchProcessing-0x02 first."
    exit 1
fi

# Start CSV file with header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through each JSON file and extract required data
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file" | awk '{print $1/10}')
    weight=$(jq -r '.weight' "$file" | awk '{print $1/10}')
    printf "%s,%.1f,%.1f\n" "$name" "$height" "$weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Display the CSV contents
cat "$OUTPUT_FILE"
echo ""

# Calculate averages using awk
awk -F',' 'NR>1 {h+=$2; w+=$3; c++} END {
    if (c>0) {
        printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", h/c, w/c
    }
}' "$OUTPUT_FILE"
